<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.dao.ReleaseWebsiteDao">

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap id="WebsiteWithDataMap" type="io.renren.entity.ReleaseWebsiteEntity">
		<result property="wId" column="w_id"/>
		<result property="website" column="website"/>
		<result property="websiteUrl" column="website_url"/>
	</resultMap>

	<select id="queryObject" resultType="io.renren.entity.ReleaseWebsiteEntity">
		select * from release_website where w_id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.entity.ReleaseWebsiteEntity">
		select * from release_website
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by w_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from release_website 
	</select>
	 
	<insert id="save" parameterType="io.renren.entity.ReleaseWebsiteEntity" useGeneratedKeys="true" keyProperty="wId">
		insert into release_website
		(
			`website`, 
			`website_url`
		)
		values
		(
			#{website}, 
			#{websiteUrl}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.entity.ReleaseWebsiteEntity">
		update release_website 
		<set>
			<if test="website != null">`website` = #{website}, </if>
			<if test="websiteUrl != null">`website_url` = #{websiteUrl}</if>
		</set>
		where w_id = #{wId}
	</update>
	
	<delete id="delete">
		delete from release_website where w_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from release_website where w_id in 
		<foreach item="wId" collection="array" open="(" separator="," close=")">
			#{wId}
		</foreach>
	</delete>

</mapper>